<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.shopify.com/s/files/1/0182/4159/products/BlackRose_ModelMensHoodie_Back_grande.jpg?v=1541553250);">
  <div class="container">
    <h1>Black Rose brings<strong>new Merch</strong> to <strong>You</strong>!</h1>
    <p>Get it now</p>
  </div>
</div>


<div class="container title">Featured</div>

  <div id="product-page">

   <div class="cards card-gap">
      <div class="card card-size">
        <img class="card-img-top" src="https://i.rocdn.com/v2/36860715?w=1024&h=1024">
        <div class="card-trip-infos">
          <div>
            <h2>Black-rose T-shirt</h2>
            <p>limited edition</p>
          </div>
          <h2 class="card-trip-pricing">£99.99</h2>
        </div>
      </div>

      <div class="card card-size">
        <img class="card-img-top" src="https://cdn.shopify.com/s/files/1/0182/4159/products/BlackRose_Mens_Joggers_Front.jpg?v=1493053720">
        <div class="card-trip-infos">
          <div>
            <h2>Camo-rose pants</h2>
            <p>Summer sale!</p>
          </div>
          <h2 class="card-trip-pricing">£19.99</h2>
        </div>
      </div>
      <div class="card card-size">
        <img class="card-img-top" src="https://i.etsystatic.com/17959774/c/2121/1684/0/392/il/228f34/1750254660/il_340x270.1750254660_qr7t.jpg">
        <div class="card-trip-infos">
          <div>
            <h2>White-Rose</h2>
            <p>Available in multi-color</p>
          </div>
          <h2 class="card-trip-pricing">£199.99</h2>
        </div>
      </div>
    </div>
  </div>
   <div class="container">
     <div class="cards">
      {% for product in collections.frontpage.products limit:4 %}
     <div>
      <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
      {{ product.price | money }}
      {% unless product.available %}<br><strong>sold out</strong>{% endunless %}
      <a href="{{ product.url | within: collection }}">
        <img src="{{ product.featured_image.src | img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}">
      </a>
   </div>
  {% endfor %}
  </div>
</div>
